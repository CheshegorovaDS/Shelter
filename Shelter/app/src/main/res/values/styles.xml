<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/mainColorGreen</item>
    </style>

<!--    Login, Registration, LogInApp-->

    <style name="EditTextLogInApp">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/txtEditHeight</item>
        <item name="android:layout_margin">@dimen/marginEditText</item>
        <item name="android:background">@drawable/back_edit_txt</item>
        <item name="android:drawablePadding">@dimen/paddingTxt</item>
        <item name="android:padding">@dimen/paddingImage</item>
        <item name="android:textColorHint">@color/editTxtHint</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/txtButtonHeight</item>
        <item name="android:layout_margin">@dimen/marginButton</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:background">@drawable/green_btn</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

</resources>
